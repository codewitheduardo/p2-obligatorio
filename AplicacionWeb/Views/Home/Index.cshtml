@using Dominio

@{
	ViewBag.Title = "Iniciar Sesión";
}

@if (ViewBag.Mensaje != null)
{
	<div class="alert alert-success text-center">@ViewBag.Mensaje</div>
}

@if (ViewBag.Error != null)
{
	<div class="alert alert-danger text-center">@ViewBag.Error</div>
}

<div class="d-flex justify-content-center align-items-center pt-3 pb-5">
	<div class="card card-registro p-3">
		
		<div class="header-login d-flex justify-content-center">
			<div class="d-inline-flex align-items-center text-primary text-decoration-none">
				<img src="~/images/logo.png" alt="Logo de Aero" />
				<h1 class="m-0">Aero.</h1>
			</div>
		</div>

		<form method="post" action="~/Home/Index" class="card-body-registro w-100 px-3">
			<div class="form-group w-100">
				<label class="form-text text-dark">Email</label>
				<input type="email" name="correo" class="input-registro" />
			</div>

			<div class="form-group w-100">
				<label class="form-text text-dark">Contraseña</label>
				<input type="password" name="password" class="input-registro" />
			</div>

			<button type="submit" class="btn-registro mt-3 form-group w-100">Iniciar sesión</button>

			<div class="text-center mt-3 form-group w-100">
				<small>¿No tenés cuenta? <a href="~/Cliente/Registro">Registrate</a></small>
			</div>
		</form>
	</div>
</div>