@using Dominio
@model Vuelo
@{
	ViewBag.Title = $"Vuelo - {Model.Numero} ";
}

<div class="pt-3 pb-5">
	<h2 class="text-center text-primary fs-1">Detalle</h2>
</div>

<div class="d-flex justify-content-center align-items-center pb-2">
	<div class="card card-compra">
		<form method="post" action="~/Pasaje/Comprar" class="compra-form">
			<h5 class="card-header d-flex align-items-center">
				<div style="flex: 1;"></div>
				<div class="mx-auto">@Model.Numero</div>
				<a href="~/Vuelo/Index" class="text-decoration-none text-dark" style="flex: 1; text-align: right;">
					<span class="material-symbols-outlined" style="font-size: 33px">
						menu_open
					</span>
				</a>
			</h5>
			<div class="card-body card-body-centro">
				<h5 class="card-title">@Model.Ruta.Salida.Ciudad - @Model.Ruta.Llegada.Ciudad</h5>

				<p class="card-text">@string.Join(", ", Model.Frecuencia)</p>
				<p class="card-text">$ @Model.ObtenerCostoPorAsiento().ToString("F2")</p>

				<input type="date" name="fecha" class="form-control mb-2 w-75" />
				<select name="equipaje" class="form-select mb-3 w-75">
					<option value="null">...</option>
					@foreach (string equipaje in Enum.GetNames(typeof(Equipaje)))
					{
						<option value="@equipaje">@equipaje</option>
					}
				</select>
				<input type="hidden" name="id" value="@Model.Numero" />
				<button type="submit" class="btn btn-primary">Comprar</button>
			</div>
		</form>
	</div>
</div>